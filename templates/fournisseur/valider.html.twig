{% extends 'base.html.twig' %}

{% block title %}Fournisseur | Informations{% endblock %}

{% block pagetitle %}Informations{% endblock %}
{% block stylesheets %} 
    {{parent()}}
{% endblock %}
{% block body %}
	{# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" /> #}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css" />
<div class="row">
  <div class="col-md-12">
    <div class="card card-warning card-outline">
      <div class="card-body">
        
        <div class="panel panel-inverse" >
        <div class="panel-body">

          <form id="formValider" data-id="{{ infos[0].id }}">
        
            <div class="row">
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Societe</label>
                        <input required type="text" name="societe" class="form-control"  value="{{ infos[0].societe }}">
                    </div>
                  </div>
                  
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ice</label>
                        <input required type="text" name="ice" class="form-control"  value="{{ infos[0].ICE }}">
                    </div>
                  </div>   
                    
            </div>    

            <div class="row">
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nom</label>
                        <input required type="text" name="nom" class="form-control"  value="{{ infos[0].nom }}">
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Prenom</label>
                        <input required type="text" name="prenom" class="form-control" value="{{ infos[0].prenom }}">
                    </div>
                  </div>                        
            </div>    

            <div class="row">
                  
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">N° telephone1</label>
                        <input required type="text" name="tel1" class="form-control"  value="{{ infos[0].tel1 }}">
                    </div>
                  </div>

                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Contact1</label>
                        <input required type="text" name="contact1" class="form-control" value="">
                    </div>
                  </div>
                  
                        
            </div>    
            <div class="row">
                  
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">N° telephone2</label>
                        <input required type="text" name="tel2" class="form-control" value="{{ infos[0].tel2 }}">
                    </div>
                  </div>

                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Contact2</label>
                        <input required type="text" name="contact2" class="form-control" value="">
                    </div>
                  </div>
                  
            </div>    
            <div class="row">
                  
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email1</label>
                        <input required type="email" name="mail1" class="form-control"  value="{{ infos[0].mail1 }}">
                    </div>
                  </div> 
                  
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Pays</label>
                        <input required type="text" name="pays" class="form-control"  value="{{ infos[0].pays }}">
                    </div>
                  </div>       
            </div>    

            <div class="row">
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ville</label>
                        <input required type="text" name="ville" class="form-control"  value="{{ infos[0].ville }}">
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">adresse</label>
                        <textarea required class="form-control" name="adresse" rows="3"  >{{ infos[0].adresse }}</textarea>
                    </div>
                  </div>
                    
                  
            </div>  
            
            <div class="row">
                  <div class="col-8">
                  </div>
                  <div class="col-4">
                    <button type="submit" class="btn btn-info pull-right"  style="width: 200px; float: right;">Valider</button>  
                  </div>
                   
            </div>  
          
          </form>

		    </div>
    </div>
  </div>
</div>
    

