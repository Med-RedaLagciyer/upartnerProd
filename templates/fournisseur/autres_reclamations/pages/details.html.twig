<label>Reclamation:</label>
<div class="row">
	<div class="col-3">
		<div class="form-group">
			<label>Objet:</label>
			<textarea class="form-control" rows="3" disabled="">{{ reclamation.objet }}</textarea>
		</div>
	</div>
	<div class="col-9">
		<div class="form-group">
			<label>Observation:
			</label>
			<textarea class="form-control" rows="3" disabled="">{{ reclamation.observation }}</textarea>
		</div>
	</div>
</div>
{% if local == true %}
	<div class="row">
		<div class="col-12">
			<label>Liste des articles:</label>

			<table id="datatables_gestion_autres" class="table table-condensed table-bordered">
				<thead>
					<tr>
						<th>N° facture</th>
						<th>Montant</th>
						{# <th>Observation</th> #}
						<th>Date facture</th>
						<th>Pièce Joint</th>
						<th>Statut</th>
					</tr>
				</thead>
				<tbody>
					{% for fac in factures %}
						<tr>
							<th>{{fac.numFacture}}</th>
							<th width="25%">{{ fac.montant|number_format(2, '.', ' ') }}</th>
							{# <th class="text-truncate" title='{{fac.observation}}' width="25%">{{fac.observation}}</th> #}
							<th width="25%">{{fac.dateFacture | date('d-m-Y')}}</th>
							<th width="">
								{% if fac.file %}
									<a id="downloadFile" data-file="{{fac.file}}" class="btn btn-secondary btn-xs pull-right" style="width: 30px;">
										<i class="fas fa-download"></i>
									</a>
								{% endif %}
							</th>
							<th>{{fac.statut.designation}}</th>
						</tr>
					{% endfor %}

				</tbody>
			</table>
		</div>

	</div>
{% else %}
	<div class="row">
		<div class="col-12">
			<label>Commande:</label>

			<table id="datatables_commande" style="width: 100% !important" class="table table-condensed table-bordered">
				<thead>
					<tr>
						<th width="">Code Pièce</th>
						<th>Date</th>
						<th>RéfDocAss</th>
						<th width="10%"></th>
					</tr>
				</thead>
				<tbody>
					{% for c in commande %}
						<tr id="{{c.id}}">
							<td id="code">{{c.code}}</td>
							<td id="datecommande">{{c.datecommande}}</td>
							<td id="refDocAsso">{{c.refDocAsso}}</td>
							<td id="actions">
								<a class="" data-toggle="dropdown" href="#" aria-expanded="false">
									<i class="fa fa-ellipsis-v" style="color: #000;"></i>
								</a>
								<div class="dropdown-menu dropdown-menu-right" style="width: 8rem !important; min-width:unset !important; font-size : 12px !important;">
									<a data-value="local" id="commandeDet" class="btnDet dropdown-item btn-xs">
										<i class="fas fa-eye mr-2"></i>
										Détails</a>
								</th>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

	</div>
{% endif %}
