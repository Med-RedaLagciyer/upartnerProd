<div class="row">
            <div class="col-3">
                <div class="form-group">
                <label>Objet:</label>
                <textarea class="form-control" rows="3" name="objet" disabled>{{ reclamation.objet }}</textarea>
                </div>
            </div>
            <div class="col-9">
                <div class="form-group">
                <label>Observation: </label>
                <textarea class="form-control" rows="3" name="observation" disabled>{{ reclamation.observation }}</textarea>
                </div>
            </div>
    </div>
<hr style="margin-top:0.5rem !important; margin-bottom:0.5rem !important;">

<div class="row">
          <div class="col-12">
            <label>Liste des factures:</label>
            <table
              id="tableFactures"
              class="table table-condensed table-bordered"
            >
              <thead>
                <tr>
                  <th width="10%">N° facture</th>
                  <th width="">N° facture frs</th>
                  <th width="">Montant</th>
                  <th width="10%">Date facture</th>
                  <th width="10%">Date document frs</th>
                </tr>
              </thead>
              <tbody>
                {% for fac in factures %}
                    <tr>
                      <td width="" class="text-truncate" title="{{ fac.code}}">{{ fac.code}}</td>
                      <td width="20%" class="text-truncate" title="{{ fac.refDocAsso}}">{{ fac.refDocAsso}}</td>
                      <td width="10%">{{ fac.montant}}</td>
                      <td width="">{{ fac.datefacture}}</td>
                      <td width="">{{ fac.dateDocAsso}}</td>
                    </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
          
</div>

<hr style="margin-top:0.5rem !important; margin-bottom:0.5rem !important;">

<label>Reponses:</label>
<div id="messages">

  {% for reponse in reclamation.reponses  %}

    {% if reponse.admin == true %}
        <div class="row">   
            <div class="col-5">
              
            </div>
            <div class="col-7">
              <div class="form-group">
                <textarea class="form-control" rows="3" disabled="">{{ reponse.message }}</textarea>
                <label style="float: right;" >{{ reponse.created | date('d-m-Y') }}</label>
              </div>
            </div>
        </div>
    {% else %}
      <div class="row">   
            <div class="col-7">
              <div class="form-group">
                <textarea  class="form-control" style="background: #d9eeff;" rows="3" disabled="">{{ reponse.message }}</textarea>
                <label style="float: left;" >{{ reponse.created | date('d-m-Y') }}</label>
              </div>
            </div>
            <div class="col-5">
              
            </div>
      </div>
    {% endif %}
    
  {% endfor %}

</div>


      <form id="message_form" data-reclamation="{{reclamation.id}}">
        <div class="row">
          <div class="col-10">
            <div class="form-group">
              <textarea name="message" class="form-control" rows="1" placeholder="Ecrivez votre message ici"></textarea>
            </div>
          </div>
          <div class="col-2">
            <button type="submit" class="btn btn-sm btn-primary pull-right" style="float: right"><i class="fas fa-paper-plane"></i> Envoyer</button>
          </div>
        </div>
      </form>

