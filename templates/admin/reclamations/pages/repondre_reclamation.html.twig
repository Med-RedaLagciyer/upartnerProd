
<div id="messages">
<div class="row">
          <div class="col-1">
            <div class="form-group" style="margin-bottom: 0;">
              <label>Objet:</label>
              
              {# <textarea class="form-control" rows="3" disabled="">{{ reclamation.objet }}</textarea> #}
            </div>
          </div>
          <div class="col-11" style="padding-left: 1 !important; margin-bottom: 0;">
            <div class="form-group">
              <p>{{ reclamation.objet }}</p>
              
            </div>
          </div>
</div>
<div class="row">
        <div class="col-7">
            <div class="form-group">
              <textarea style="background: #d9eeff;"     class="form-control" rows="3" disabled="">{{ reclamation.observation }}</textarea>
              <label style="float: left;" >{{ reclamation.created | date('d-m-Y') }}</label>
            </div>
          </div>
</div>

  {# {% for reponse in reclamation.reponses  %}

    {% if reponse.admin == true %}
      <div class="row">   
            <div class="col-5">
              
            </div>
            <div class="col-7">
              <div class="form-group">
                <textarea class="form-control" rows="3" disabled="">{{ reponse.message }}</textarea>
